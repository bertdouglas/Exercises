{
  "title" : "Sierpinski Diamond",
  "refs" : [
    "http://paulbourke.net/fractals/lsys/"
  ],
  "angle" : 90.0,
  "order" : [2,3,4,5],
  "start" : "F+XF+F+XF",
  "rules" : {
    "X" : "XF-F+F-XF+F+XF-F+F-X"
  },
  "post_rules" : {}
}

{
  "title" : "Sierpinski Arrowhead",
  "refs" : [
    "http://paulbourke.net/fractals/lsys/"
  ],
  "angle" : 60.0,
  "order" : [2,3,4,8],
  "start" : "YF",
  "rules" : {
    "X" : "YF+XF+Y",
    "Y" : "XF-YF-X"
  },
  "post_rules" : {}
}

{
  "title" : "Sierpinski Square Snowflake",
  "refs" : [
    "http://www.ethoberon.ethz.ch/WirthPubl/AD.pdf#page93",
    "https://en.wikipedia.org/wiki/Sierpi%C5%84ski_curve",
    "http://mathworld.wolfram.com/SierpinskiCurve.html"
  ],
  "angle" : 45.0,
  "start" : "+BABA",
  "order" : [],
  "rules" : {
    "A" : "F--F--",
    "B" : "BF+FF+B F--F-- BF+FF+B"
  },
  "post_rules" : {}
}

{
  "title" : "Pentaplexity",
  "refs" : [
    "http://paulbourke.net/fractals/lsys/"
  ],
  "angle" : 36.0,
  "order" : [],
  "start" : "F++F++F++F++F",
  "rules" : {
    "F" : "F++F++F|F-F++F"
  },
  "post_rules" : {}
}

{
  "title" : "Dragon Curve",
  "refs" : [
    "http://paulbourke.net/fractals/lsys/"
  ],
  "angle" : 90.0,
  "order" : [2,4,6,14],
  "start" : "+FX",
  "rules" : {
    "X" : "X+YF+",
    "Y" : "-FX-Y"
  },
  "post_rules" : {}
}

{
  "title" : "Plant 1",
  "refs" : [
    "https://www.cs.unh.edu/~charpov/programming-lsystems.html"
  ],
  "angle" : 22.5,
  "order" : [],
  "start" : "++++X",
  "rules" : {
    "X" : "F+[[X]-X]-F[-FX]+X",
    "F" : "FF"
  },
  "post_rules" : {}
}

{
  "title" : "Plant 2",
  "refs" : [
    "https://www.cs.unh.edu/~charpov/programming-lsystems.html"
  ],
  "angle" : 22.5,
  "order" : [],
  "start" : "++++F",
  "rules" : {
    "F" : "FF-[-F+F+F]+[+F-F-F]"
  },
  "post_rules" : {}
}

